# =============================================================================
# Ceres Configuration
# =============================================================================

# Database Configuration
# Must match compose.yml: user=ceres_user, password=password, db=ceres_db
DATABASE_URL=postgresql://ceres_user:password@localhost:5432/ceres_db

# Embedding Provider: "gemini" (default) or "openai"
EMBEDDING_PROVIDER=gemini

# Google Gemini API Configuration
# Get your free API key at: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# OpenAI API Configuration (required when EMBEDDING_PROVIDER=openai)
# OPENAI_API_KEY=your-openai-api-key-here
# EMBEDDING_MODEL=text-embedding-3-small

# Server Configuration
HOST=127.0.0.1
PORT=3000

# CORS: comma-separated origins, or "*" for any (dev only)
CORS_ALLOWED_ORIGINS=*

# Rate Limiting (per IP)
RATE_LIMIT_RPS=10
RATE_LIMIT_BURST=30

# Portal configuration file path (optional, defaults to ~/.config/ceres/portals.toml)
# PORTALS_CONFIG=/path/to/portals.toml

# Logging
RUST_LOG=info

# Security (not yet implemented, see issue #72)
# CERES_ADMIN_TOKEN=change_me_in_production

# IMPORTANT: Never commit actual credentials to git!
